{
    // Follow systems color scheme
    "window.autoDetectColorScheme": true,
    "workbench.preferredLightColorTheme": "Quiet Light",
    "workbench.colorTheme": "Quiet Light",

    // Prevent vs code from opening last session
    // https://stackoverflow.com/questions/31270774/how-to-prevent-visual-studio-code-from-always-reopening-the-previous-files-or-fo/59740790#59740790
    "window.restoreWindows": "none",

    
    // Disable welcome screen
    "workbench.startupEditor": "none",

    // Always wrap text
    "editor.wordWrap": "on",

    // If multiple lines are selected, search only in selections
    // See https://www.reddit.com/r/vscode/comments/rv9rep/find_and_replace_in_selected_text_only_on_mac/#
    "editor.find.autoFindInSelection": "multiline",

    // Auto format
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "notebook.formatOnSave.enabled": true,
    "notebook.formatOnCellExecution": true,

    // https://code.visualstudio.com/docs/sourcecontrol/intro-to-git#_using-git-in-the-builtin-terminal
    "terminal.integrated.defaultProfile.windows": "Git Bash"
}
